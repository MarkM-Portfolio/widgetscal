<sqlMap namespace="MiscData_MT">
	
	<insert id="insertData" parameterClass="DBMiscData">
		INSERT INTO CALENDAR.CA_MISCDATA
			(NAME, VAL, MODIFIEDON)
		VALUES
			(#name#, #value#, #modifiedOn#)
	</insert>
	
	<update id="updateData" parameterClass="DBMiscData">
		UPDATE CALENDAR.CA_MISCDATA
		SET VAL = #value#, MODIFIEDON = #modifiedOn#
		WHERE NAME = #name#
	</update>
	
	<delete id="deleteData" parameterClass="java.util.Map">
		DELETE FROM CALENDAR.CA_MISCDATA WHERE NAME = #name# <isNotNull property="val">AND VAL LIKE #val#</isNotNull>
	</delete>
	
	<select id="selectData" parameterClass="string" resultClass="DBMiscData">
		SELECT NAME as name, VAL as value, MODIFIEDON as modifiedOn
		FROM CALENDAR.CA_MISCDATA
		WHERE NAME = #name#
	</select>
	
</sqlMap>